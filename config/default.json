{


//
// Define our "crowds", which are groups of groups.
// The reason we have a higher level of organization here is because we may want 
// pull data from the same group multiple times (Top 5, Top 10, Top 25, etc...)
// and this allows us to have a logical grouping of such things.
//
"crowds": {

	"anthrocon": {
		"name": "Anthrocon Leaderboards",

		"groups": {

			"anthrocon10": {
				//
				// Name is what will be dispalyed on the page.
				// If not specified, defaults to the key.
				//
				name: "Anthrocon recent 10",
				//
				// The "id" field is REQUIRED.  Everything else is optional.
				//
				id: "49844448265",
				numPosts: 10,
				numTopPosters: 5,
				numTopCommenters: 3,
				refreshInterval: 300,
				retryInterval: 10,
			},

			"anthrocon50": {
				name: "Anthrocon recent 50",
				id: "49844448265",
				numPosts: 50,
				numTopPosters: 10,
				numTopCommenters: 10,
				refreshInterval: 300,
				retryInterval: 10,
			},

		},

	},

	"eurofurence": {
		"name": "Eurofurence Lists",

		"groups": {

			"eurofurence10": {
				name: "Eurofurence recent 10",
				id: "487362771386161",
				numPosts: 10,
				numTopPosters: 10,
				numTopCommenters: 10,
				refreshInterval: 300,
				retryInterval: 10,
			},

		},

	},

},

//
// Our info for our Facebook app
//
facebookAuth: {
    clientID: "FIXME",
    clientSecret: "FIXME",
    callbackURL: "FIXME",
},

/////
//
// Default options.  These are all default options for groups.
// Each group can override any of these options with its own values.
//
//

//
// The secret for encrpyting sessions.
//
// PLEASE REPLACE/OVERRIDE THIS WITH ONE OF YOUR OWN!
//
// You can generate a replacement key with DiceWare: https://www.dmuth.org/diceware/
//
sessionSecret: "ChildClarkSnyder",

//
// How many seconds before retrying. in case of an error.
// Note that Facebook allows 200 queries per user per hour.  
// 3600/200 > 18, so values of greater than 18 seconds would be a good idea...
//
retryInterval: 300,

//
// How many seconds before refreshing a group?
//
refreshInterval: 900,

//
// How many posts to fetch from each group? 
//
numPosts: 100,

//
// How many top posters do we want?
//
numTopPosters: 10,

//
// How many top commenters do we want?
//
numTopCommenters: 10,

}


